                    <script>
    $(document).ready(function () {
        $("#add").click(function () {
            var id = $("#sup_id").val();

            var sup_name = $("#sup_name").val();
            var mobile = $("#mobile").val();
            var email = $("#email").val();
            var address = $("#address").val();

            var data = "sup_name=" + sup_name + "&mobile=" + mobile + "&email=" + email + "&address=" + address;
           // alert(data);
            $.ajax({
                type: "POST",
                url: "Insert_Supplier",
                async:false,
                data: data,

                success:function($show_insert_data)
                {
                    $("#retrieve_data").html($show_insert_data);
                }
            });

        });
    });
                    </script>
                    <h2>Registar Fornecedor</h2>


                    @ViewBag.status
                    @ViewData["status"]
                    @ViewData["fail_status"]
                    @ViewBag.delete_status

                  <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModal">Addicionar Fornecedor</button>

                    <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title" style="">Registar Fornecedor</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    
                                </div>
                                <div class="modal-body">
                                    <form method="post" id="registration">
                                        <table class="table">
                                            <input type="number" style="display:none" name="sup_id" id="sup_id" value="2" class="form-control" placeholder="Supplier Name" />
                                            <tr>
                                                <td>Nome do fornecedores</td>
                                                <td><input type="text" name="sup_name" style="border-bottom:2px solid #0094ff " id="sup_name" class="form-control" placeholder="Nome do fornecedores" /></td>
                                            </tr>
                                            <tr>
                                                <td>Numero do Fornecedor</td>
                                                <td><input type="number" name="mobile" style="border-bottom:2px solid #0094ff"  id="mobile" class="form-control" placeholder="Numero do Fornecedor" /></td>
                                            </tr>
                                            <tr>
                                                <td>Email do Fornecedor</td>
                                                <td><input type="text" name="email" style="border-bottom:2px solid #0094ff"  id="email" class="form-control" placeholder="Email do Fornecedor" /></td>
                                            </tr>
                                            <tr>
                                                <td>Enderenço</td>
                                                <td><input type="text" name="address" style="border-bottom:2px solid #0094ff"  id="address" class="form-control" placeholder="Enderenço" /></td>
                                            </tr>
                                            <tr>
                                                <td>
                                                <input type="button" name="submit" onclick="save()" id="add" class="btn btn-primary" value="Registar Funcionario" />
                                                <!-- <input type="button" name="submit" onclick="save()" id="add" class="btn btn-primary" value="Add Supplier" /> -->
                                                </td>
                                            </tr>
                                        </table>
                                    </form>
                                </div>

                            </div>

                        </div>
