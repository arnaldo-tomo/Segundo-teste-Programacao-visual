<table class="table">
    @foreach (var v in Model.SingleMystock)
    {
        <tr>
            <td>Nº da fatura: </td>
            <td>@v.invoice</td>
        </tr>
        <tr>
            <td>Data da Compra: </td>
            <td>@v.bill_date</td>
        </tr>
        <tr>
            <td>Nome do cliente: </td>
            <td>@v.customer_name</td>
        </tr>
       
    }
</table>
<table class="table">
    <tr>
        <th>Produtos</th>
        <th>Quantidade</th>
        <th>Preço</th>
        <th>Quantia</th>

    </tr>
    @foreach (var m in Model.items)
    {
        <tr>
            <td>@m.item_name</td>
            <td>@m.quantity</td>
            <td>@m.price</td>
            <td>@m.total_price_per_item</td>
        </tr>
    }
</table>

@foreach (var t in Model.total)
{

    <h2><b>VALOR PAGO</b> @t.total_order_amount. Meticais</h2><br />

}


